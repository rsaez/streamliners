    </tr>
    <% end %>

    <% if !@child.influenza.blank? %>
    <tr>
      <td class="show_child_td" colspan="">
        <strong> Influenza: </strong>
      </td>
      <td>
        <%= check_box_tag "", 1 , @child.influenza ? true : false, :disabled => true %>
      </td>
    </tr>
    <% end %>

    <% if !@child.mmr.blank? %>
    <tr>
      <td class="show_child_td" colspan="">
        <strong> MMR: </strong>
      </td>
      <td>
        <%= check_box_tag "", 1 , @child.mmr ? true : false, :disabled => true %>
      </td>
    </tr>
    <% end %>

    <% if !@child.immunization_needed.blank? %>
    <tr>
      <td class="show_child_td" colspan="">
        <strong> Additional Immunizations: </strong>
      </td>
      <td>
        <%= @child.immunization_needed %>
      </td>
    </tr>
    <% end %>

    <% if !@child.revelant_information.blank? %>
    <tr>
      <td class="show_child_td" colspan="">
        <strong> Relevant Information: </strong>
      </td>
      <td>
        <%= @child.revelant_information %>
      </td>
    </tr>
    <% end %>

    <% if !@child.absences.blank? %>
    <tr>
      <td class="show_child_td" colspan="">
        <strong> Absences: </strong>
      </td>
      <td>
        <%= @child.absences %>
      </td>
    </tr>
    <% end %>
    
	</tbody>
</table>

