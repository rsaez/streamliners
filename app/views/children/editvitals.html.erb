<h1><%= @child.last_name %>, <%= @child.first_name %></h1>
<h3>Edit Vitals</h3>

<%= form_for(@child, html: {class:"form-horizontal"}) do |f| %>
  
  <% if @child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@child.errors.count, "error") %> prohibited this child from being saved:</h2>
      <ul>
        <% @child.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <tbody>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Height: ", :class => "edit_vitals_label" %>
      </td>
      <td colspan="3">
        Total Height <%= f.text_field :height_total_inches, :class => "number_field" %> in
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Weight: ", :class => "edit_vitals_label" %>
      </td>
      <td colspan="3">
        <%= f.text_field :weight_lbs, :class => "number_field" %> lbs
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"bmi", 'BMI: ', :class => "edit_vitals_label" %>
      </td>
      <td colspan="3">
        <%= f.text_field :bmi_result, :class => "number_field" %>
         %
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="4">
        Blood Pressure
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Test 1", 'Take 1: ', :class => "edit_vitals_label" %>
      </td>
      <td colspan="3">
        <%= f.text_field :systolic_1, :class => "number_field" %>
        /
        <%= f.text_field :diastolic_1, :class => "number_field" %>
         mm Hg
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Test 2", 'Take 2: ', :class => "edit_vitals_label" %>
      </td>
      <td>
        <%= f.text_field :systolic_2, :class => "number_field" %>
        /
        <%= f.text_field :diastolic_2, :class => "number_field" %>
         mm Hg
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Test 3", 'Take 3: ', :class => "edit_vitals_label" %>
      </td>
      <td>
        <%= f.text_field :systolic_3, :class => "number_field" %>
        /
        <%= f.text_field :diastolic_3, :class => "number_field" %>
         mm Hg
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Hemoglobin: ", :class => "edit_vitals_label" %>
      </td>
      <td colspan="3">
        <%= f.text_field :hemoglobin, :class => "number_field" %>
        gm/dL
      </td>
    </tr>
    <tr>
      <td class="show_child_td" colspan="">
        <%= f.label :"Blood Glucose: ", :class => "edit_vitals_label" %>
      </td>
      <td>
        <%= f.text_field :blood_glucose, :class => "number_field" %>
        mg/dL
      </td>
    </tr>
  </tbody>
  </table>

  <% if @child_id.nil?%>
    <%= f.hidden_field :child_id, value: params[:child_id]%>
  <% else %>
    <%= f.hidden_field :child_id, value: @child_id%>
  <% end %>

  <% @child.form_id_number = 2 %>
  
  <div  class: "btn btn-large btn-primary">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', @child %> |
