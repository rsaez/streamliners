      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <td class="hearing_title" colspan="4">
          <p>Test 1</p>
      </tr>
      
      <tr>
        <td class="td_hearing_ear" colspan="">
          <p>Left Ear</p>
        </td>
        <td>
          <p>
            <%= f.text_field :hearing_db_left_1, :class => "ten_number_field" %>db@ 500 - 5000 hz, 
            <%= f.text_field :ear_left_pass_1, :class => "pass_field" %> pass/fail. 
          </p>
        </td>
        <td class="td_hearing_ear" colspan="">
          <p>Right Ear</p>
        </td>
        <td>
          <p>
            <%= f.text_field :hearing_db_right_1, :class => "ten_number_field" %>db@ 500 - 5000 hz, 
            <%= f.text_field :ear_right_pass_1, :class => "pass_field" %> pass/fail.
          </p>
        </td>
      </tr>
      
      <tr>
        <td class="hearing_title" colspan="4">
          <p>Test 2</p>
        </td>
      </tr>
      
      <tr>
        <td class="td_hearing_ear">
          <p>Left Ear</p>
        </td>
        <td>
          <p>
            <%= f.text_field :hearing_db_left_2, :class => "ten_number_field" %>db@ 500 - 5000 hz, 
            <%= f.text_field :ear_left_pass_2, :class => "pass_field" %> pass/fail.
          </p>
        </td>
        <td class="td_hearing_ear" colspan="">
          <p>Right Ear</p>
