<%= form_for(@child) do |f| %>
  
  <% if @child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@child.errors.count, "error") %> prohibited this child from being saved:</h2>
      <ul>
      <% @child.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender, "Gender" %>
    <%= f.select :gender, options_for_select(%w[Male Female]) %><br>
  </div>
  <div class="field">
    <%= f.label :DOB, "DOB" %>
    <%= f.date_select :DOB, (1920..2014).to_a %><br>
  </div>
  <div class="field">
    <%= f.label :location, "Location" %>
    <%= f.text_field :location %><br>
  </div>
  <div class="field">
    <%= f.label :Child_examined_No_parent_present, "Child Examened; No Parent Present" %>
    <%= f.check_box :no_parent_present %><br>
  </div>
  <div class="field">
    <%= f.label :Parental_permission_given, "Parental Permission Given" %>
    <%= f.check_box :parental_permission_given %><br>
  </div>
  <%= render 'allergies' %>
  <%= render 'immunizations' %>
  <%= render 'relevant' %>
<% end %>
