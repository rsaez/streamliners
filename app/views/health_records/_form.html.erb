<%= form_for(@health_record) do |f| %>
  
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :relevant_information, "Relevant Information" %>
    <%= f.text_area :relevant_information, :cols => "10", :rows => "5" %><br>
  </div>
    <div class="field">
    <%= f.label :"Height (ft)" %>
    <%= f.text_field :height_feet %>
    <%= f.label :"Height (in)" %>
    <%= f.text_field :height_inches %>
  </div>
  <div class="field">
    <%= f.label :"Weight (in pounds) " %>
    <%= f.text_field :weight %><br>
  </div>
  <div class="field">
    <%= f.label :"Blood pressure (Systolic)"  %>
    <%= f.text_field :systolic1 %><br>
    <%= f.label :"Blood pressure (Diastolic)"  %>
    <%= f.text_field :diastolic1 %><br>
  </div>
  <div class="field">
    <%= f.label :"Haemoglobin (mm/dilution)" %>
    <%= f.text_field :hemoglobin %><br>
    <% if @health_record.errors[:hemoglobin]%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :"Blood Sugar" %>
    <%= f.text_field :blood_sugar %><br>
  </div>
  <div class="field">
    <%= f.label :"BMI" %>
    <%= f.text_field :bmi %><br>
  </div>
  <%= render 'hearing' %>
  <%= render 'vision' %>
  
  
    <% if @health_record.child_id.nil?%>
      <%= f.hidden_field :child_id, value: params[:child_id]%>
    <% else %>
      <%= f.hidden_field :child_id, value: @health_record.child_id%>
    <% end %>
    <div  class: "btn btn-large btn-primary">
    <%= f.submit %>
  </div>

<% end %>
