<%= form_for(@health_record) do |f| %>
  
  <%= render 'shared/error_messages' %>
  <table class="table table-bordered">
  <thead class="directory">
    <tr>
      
      <td colspan="3"><h3><%= @child.name %></h3></td>
      
    </tr>
  </thead>

  <tbody>
    <tr>
      <td colspan="3">
        
        <%= f.label :"Height: " %>
        <%= f.text_field :height_feet, :class => "number_field" %> ft 
        <%= f.text_field :height_inches, :class => "number_field" %> in; 
        Total Height <%= f.text_field :height_total_inches, :class => "number_field" %> in; 
        Total Height <%= f.text_field :height_total_cm, :class => "number_field" %> cm 
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <%= f.label :"Weight: " %>
        <%= f.text_field :weight_lbs, :class => "number_field" %> lbs; 
        <%= f.text_field :weight_oz, :class => "number_field" %> oz 
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <%= f.label :"bmi", 'BMI' %>
        <%= f.text_field :bmi_result, :class => "number_field" %>
         %
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <p>Blood Pressure</p>
        <p>
        <%= f.label :"Test 1", 'Take 1', :class => 'two_labels' %>
        <%= f.text_field :systolic1, :class => "number_field" %>
         Systolic / 
        <%= f.text_field :diastolic1, :class => "number_field" %>
        Diastolic mm Hg
        </p>
        <p>
        <%= f.label :"Test 2", 'Take 2', :class => 'two_labels' %>
        <%= f.text_field :systolic2, :class => "number_field" %>
         Systolic / 
        <%= f.text_field :diastolic2, :class => "number_field" %>
        Diastolic mm Hg
        </p>
        <p>
        <%= f.label :"Test 3", 'Take 3', :class => 'two_labels' %>
        <%= f.text_field :systolic3, :class => "number_field" %>
         Systolic / 
        <%= f.text_field :diastolic3, :class => "number_field" %>
        Diastolic mm Hg
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <p>
          <%= f.label :"Hemoglobin" %>
          <%= f.text_field :hemoglobin, :class => "number_field" %>
          gm/dL
          <% if @health_record.errors[:hemoglobin]%>
          <% end %>
        </p>
        <p>
          <%= f.label :"Blood Glucose" %>
          <%= f.text_field :blood_glucose, :class => "number_field" %>
          mg/dL
        </p>
      </td>
    </tr>
    
    <%= render 'hearing' %>
    <%= render 'vision' %>
    
  </tbody>
  </table>
  <% if @health_record.child_id.nil?%>
    <%= f.hidden_field :child_id, value: params[:child_id]%>
  <% else %>
    <%= f.hidden_field :child_id, value: @health_record.child_id%>
  <% end %>
  <div  class: "btn btn-large btn-primary">
    <%= f.submit %>
  </div>
<% end %>
<br />
<%= link_to 'Back', @child %> |
<%= link_to 'Directory', children_path %>
